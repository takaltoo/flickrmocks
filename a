  class PagesWithUrl
    attr_reader :page,:url

    def initialize(options=nil)
      self.current_page = options[:current_page]
      self.url = options[:url]
    end

    def current_page?
      !!@current_page
    end

    private
    attr_writer :current_page,:url
  end
a = PagesWithUrl.new(:current_page => false,:url => 'http://www.google.com')
puts a.url
puts a.current_page?
